<%= form_for @user do |u| %>
	<%= u.file_field :avatar %>
	<%= u.text_field :first_name, placeholder: "First Name" %>
	<%= u.text_field :last_name, placeholder: "Last Name" %>
	<%= u.text_field :email, placeholder: "E-mail" %>
	<%= u.password_field :password, placeholder: "Password" %>
	<%= u.password_field :password_confirmation, placeholder: "Password Confirmation" %>
	<%= u.submit "Sign Up" %>
<% end %>